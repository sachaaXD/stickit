<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E6"
    tools:context=".HomePage">

    <!-- HEADER PROFILE -->
    <LinearLayout
        android:id="@+id/headerProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/image_removebg_preview_7_" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, User"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to StickIt"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- SEARCH BAR -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/card_blue"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerProfile">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/image_removebg_preview_2_" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Search"
            android:textColorHint="#8A8A8A"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- CARD BIRU ATAS -->
    <LinearLayout
        android:id="@+id/cardBlue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_blueforhomepage"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Stickers"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cardTop1"
                android:layout_width="0dp"
                android:layout_height="151dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_sticker"
                android:gravity="center"
                android:orientation="vertical"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/imgTop1"
                    android:layout_width="112dp"
                    android:layout_height="94dp"
                    android:src="@drawable/image_removebg_preview_3_" />

                <TextView
                    android:id="@+id/tvTopName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aoboshi_one"
                    android:text="Loading..."
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardTop2"
                android:layout_width="0dp"
                android:layout_height="151dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_sticker"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTop2"
                    android:layout_width="115dp"
                    android:layout_height="100dp"
                    android:src="@drawable/image_removebg_preview_4_"/>

                <TextView
                    android:id="@+id/tvTopName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aoboshi_one"
                    android:text="Loading..."
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- CARD BIRU BAWAH -->
    <LinearLayout
        android:id="@+id/cardbluee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_blueforhomepage"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended 4 u"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cardRec1"
                android:layout_width="0dp"
                android:layout_height="162dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_sticker"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgRec1"
                    android:layout_width="124dp"
                    android:layout_height="109dp"
                    android:src="@drawable/image_removebg_preview_5_"/>

                <TextView
                    android:id="@+id/tvRecName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aoboshi_one"
                    android:text="Loading..."
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardRec2"
                android:layout_width="0dp"
                android:layout_height="162dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_sticker"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgRec2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_removebg_preview_6_"/>

                <TextView
                    android:id="@+id/tvRecName2"
                    android:layout_width="142dp"
                    android:layout_height="33dp"
                    android:fontFamily="@font/aoboshi_one"
                    android:text="Loading..."
                    android:textSize="13sp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- BOTTOM NAV -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_bottom_nav_blue"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="40dp">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/screenshot_2026_01_17_194529" />

        <ImageView
            android:id="@+id/navCategory"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/screenshot_2026_01_17_185105" />

        <ImageView
            android:id="@+id/navCart"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/screenshot_2026_01_17_185112" />

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:src="@drawable/screenshot_2026_01_17_185122" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
