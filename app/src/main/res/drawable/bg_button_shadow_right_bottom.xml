<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Efek Shadow (lapisan bawah) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#A9A9A9"/> <!-- Warna shadow abu-abu -->
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <!-- Tombol Utama (lapisan atas) -->
    <item
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <!-- Warna tombol utama ada di sini. Anda bisa mengubahnya jika perlu. -->
            <!-- Namun, karena Anda menggunakan app:backgroundTint di layout utama, warna ini akan ditimpa. -->
            <solid android:color="#5F5F5F"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>

</layer-list>
